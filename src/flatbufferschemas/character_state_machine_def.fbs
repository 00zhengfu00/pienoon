namespace fpl.splat;

enum StateId:byte {
  Idling,
  Loading_1,
  Loading_2,
  Loading_3,
  Throwing,
  Blocking,
  HitByPie,
  KO,
  Count // Must be last
}

enum LogicalInputs:byte (bit_flags) {
  ThrowPie,
  Deflect,
  Left,
  Right,
  JustHit,
  NoHealth,
  AnimationEnd
}

table TransitionCondition {
  logical_inputs:LogicalInputs;
  time_begin:int = 0;
  time_end:int = 2147483647; // MAX_INT
}

table Transition {
  target_state:StateId;
  condition:TransitionCondition;
}

table CharacterState {
  id:StateId;
  transitions:[Transition];
  timeline:Timeline;
}

table CharacterStateMachineDef {
  states:[CharacterState];
  initial_state:StateId;
}

root_type CharacterStateMachineDef;
